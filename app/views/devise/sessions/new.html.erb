<section id="signin" class="contact section has-pattern">
  <div class="container signin">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Sign in Customer Bora</h1>

        <%= render 'shared/alert' %>

        <div class="account-wall no-border">
          <%= image_tag "user.png", class: "profile-img" %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
              <%= f.text_field :phone, class: "form-control", placeholder: "Phone", autofocus: true %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
              <% if devise_mapping.rememberable? -%>
                  <label class="checkbox pull-left">
                    <%= f.check_box :remember_me %>
                    Remember me
                  </label>
              <% end -%>
              <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
              <%= f.submit "Sign in", class: "btn btn-lg btn-success btn-block" %>
              <%= render "devise/shared/links" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>




